<UserControl x:Class="EmailSender.TestController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmailSender"
             xmlns:viewmodel="clr-namespace:EmailSender.ViewModel"
             mc:Ignorable="d" 
             DataContext="{DynamicResource TestControllerModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <viewmodel:TestControllerModel x:Key="TestControllerModel" />
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="{Binding Field1}"/>
        <Button 
            Width="100"
            Height="30"
            Content="Читать сейчас"
            Margin="5,0,5,0"
            Command="{Binding TestCommand}"
        />
        
        
        

    </Grid>
</UserControl>
