<UserControl x:Class="EmailSender.View.TelegramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmailSender.View"
             mc:Ignorable="d" 
             xmlns:model="clr-namespace:EmailSender.ViewModel"
             DataContext="{DynamicResource telega}"
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <model:TelegramViewModel x:Key="telega"/>
    </UserControl.Resources>
    <StackPanel >
        <Label
            Content="Telegram api key"                   
        />
        <TextBox 
            Text="{Binding ApiKey}" 
         />

        <Label
            Content="Telegram receiver id"                       
        />
        <TextBox 
            Text="{Binding ReceiverId}"              
        />
    </StackPanel>
</UserControl>
